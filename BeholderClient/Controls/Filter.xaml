<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Beholder.Controls.Filter"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Beholder.Controls"
    x:Name="This"
    x:DataType="controls:Filter">
    <Border
        x:Name="Background"
        Padding="10,4"
        BackgroundColor="#E3F2FD"
        HeightRequest="30"
        StrokeShape="RoundRectangle 12"
        StrokeThickness="0">
        <Grid
            ColumnDefinitions="*,auto"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Image
                x:Name="ArrowImage"
                Grid.Column="0"
                Margin="0,0,6,0"
                x:DataType="controls:Filter"
                BindingContext="{x:Reference This}"
                HeightRequest="{Binding ImageSize}"
                IsVisible="False"
                Source="arrow_black.png"
                VerticalOptions="Center"
                WidthRequest="{Binding ImageSize}" />
            <Label
                x:Name="TextLabel"
                Grid.Column="1"
                x:DataType="controls:Filter"
                BackgroundColor="Transparent"
                BindingContext="{x:Reference This}"
                FontSize="14"
                Text="{Binding Text}"
                TextColor="#0D47A1"
                VerticalOptions="Center" />

        </Grid>
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="ClickedCommand" />
        </Border.GestureRecognizers>
    </Border>
</ContentView>
