<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Beholder.Controls.Teleprogram"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Beholder.Controls"
    x:Name="This"
    x:DataType="controls:Teleprogram">
    <Border
        Margin="12,8"
        BackgroundColor="{StaticResource Surface}"
        HeightRequest="40"
        Shadow="#bfbfbf 1 1"
        StrokeShape="RoundRectangle 6"
        StrokeThickness="0">
        <Grid
            Margin="12,6"
            ColumnDefinitions="auto,auto,*"
            ColumnSpacing="12"
            VerticalOptions="Center">
            <Label
                Grid.Column="0"
                x:DataType="controls:Teleprogram"
                BindingContext="{x:Reference This}"
                FontAttributes="Bold"
                FontSize="16"
                Text="{Binding Time}"
                TextColor="#111" />
            <Label
                Grid.Column="1"
                x:DataType="controls:Teleprogram"
                BindingContext="{x:Reference This}"
                FontSize="16"
                LineBreakMode="TailTruncation"
                MaxLines="1"
                Text="{Binding Title}"
                TextColor="#333" />
        </Grid>
    </Border>
</ContentView>
